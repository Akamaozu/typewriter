{
  "$comment": "JSON Schema specifying what configuration options are allowed in typewriter.yml files.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["client", "trackingPlans"],
  "additionalProperties": false,
  "properties": {
    "client": {
      "type": "object",
      "required": ["sdk"],
      "properties": {
        "sdk": {
          "$comment": "Which Segment SDK the client should be generated for.",
          "type": "string",
          "enum": ["analytics.js", "analytics-node", "analytics-ios"]
        }
      },
      "oneOf": [
        {
          "type": "object",
          "required": ["language"],
          "properties": {
            "language": {
              "$comment": "Which language to use when generating clients.",
              "type": "string",
              "enum": ["javascript", "typescript"]
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "language": {
              "$comment": "Which language to use when generating clients.",
              "type": "string",
              "enum": ["objective-c"]
            }
          }
        }
      ]
    },
    "trackingPlans": {
      "$comment": "Which Tracking Plans to sync locally, to be used for client generation",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "workspaceSlug", "path"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "workspaceSlug": {
            "type": "string"
          },
          "path": {
            "$comment": "A directory path relative to this typewriter.yml file, specifying where this Tracking Plan's client should be output.",
            "type": "string",
            "minLength": 1
          },
          "events": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "enum": ["latest"]
            }
          }
        }
      }
    },
    "tokenCommand": {
      "$comment": "A shell command that must produce a Segment API token as its only output. If not specified, your environment's TYPEWRITER_TOKEN will be used.",
      "type": "string",
      "minLength": 1
    }
  }
}
